@inject StateContainer State

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">NGUOptimizationTool</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Import
            </NavLink>
        </li>
        @if (State.PlayerData != null)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="summary">
                    <span class="oi oi-plus" aria-hidden="true"></span> Summary
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="challenges">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Challenges
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="yggdrasil">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Yggdrasil
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        State.OnChange += this.StateHasChanged;
    }

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
